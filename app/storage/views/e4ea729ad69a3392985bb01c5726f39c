     </div>
   
     <div class="form-group input-sm col-lg-1">
        <?php echo Form::select('Type',['+','-'],'1', ['class'=>'form-control']); ?>

    </div>

    <div class="form-group input-sm col-lg-2"> 
        <?php echo Form::text('amount',null, ['class'=>'form-control','placeholder'=>'Amount']); ?>

    </div>

    <div class="form-group input-sm col-lg-3"> 
        <?php echo Form::text('description',null, ['class'=>'form-control','placeholder'=>'Description']); ?>

    </div>

     <div class="form-group input-sm col-lg-2">
        <?php echo Form::select('category',['Select Category','Transportation','Fun','Bills','Medical','Income','Household','Personal','Insurance'],'1', ['id' => 'Category','class'=>'form-control']); ?>

    </div>

